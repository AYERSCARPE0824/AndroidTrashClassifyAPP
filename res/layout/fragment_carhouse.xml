<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CarHouseFragment"
    xmlns:tc="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E7FDEA">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="“鲜”指数："
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <com.car.view.CompletedView
                    android:id="@+id/tasks_view"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="120dp"
                    tc:circleColor="@color/white"
                    tc:radius="68dip"
                    tc:ringBgColor="@color/white"
                    tc:ringColor="@color/turn_in_button"
                    tc:strokeWidth="10dip" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:background="@drawable/housedetail_item_first">

            <LinearLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="9dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/temp" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="温度" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_temp_now"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0.1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="℃" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="适宜区间"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_temp_down"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="~"/>
                    <TextView
                        android:id="@+id/tv_temp_up"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="℃"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginLeft="29dp"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/ib_switch_temp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/switch4" />
                <TextView
                    android:id="@+id/tv_switch_temp"
                    android:layout_width="29dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="off"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="13dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/humidity" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="湿度" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_humidity_now"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="87" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="%" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="适宜区间"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_humidity_down"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="85"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="~"/>
                    <TextView
                        android:id="@+id/tv_humidity_up"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="90"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="%"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginLeft="29dp"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/ib_switch_humidity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/switch4" />
                <TextView
                    android:id="@+id/tv_switch_humidity"
                    android:layout_width="29dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="off"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#E7FDEA">

            <LinearLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="9dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/co21" />

            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="CO₂浓度" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_co2_now"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="344" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="ppm" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="适宜区间"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_co2_down"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="800"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="~"/>
                    <TextView
                        android:id="@+id/tv_co2_up"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="950"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ppm"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginLeft="29dp"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/ib_switch_co2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/switch4" />
                <TextView
                    android:id="@+id/tv_switch_co2"
                    android:layout_width="29dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="off"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:background="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/housedetail_item_last">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shake" />

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview7"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="振动程度" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_shake_now"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="22" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="mm" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ib_map"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/locate"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="浙江省台州市临海市东方大道605号"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="上次更新:"/>
            <TextView
                android:id="@+id/tv_last_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="12:04:37"/>
            <ImageButton
                android:id="@+id/ib_refresh"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="50dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/fresh"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>