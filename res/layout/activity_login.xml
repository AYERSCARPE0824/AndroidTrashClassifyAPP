<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomllout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/welcome"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"/>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="95dp"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="640px"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="ip地址"
            android:text="192.168.1.103"
            android:background="@drawable/turn_in_line"
            android:id="@+id/ed_host"
            android:cursorVisible="true"/>
    </LinearLayout>
    <EditText
        android:layout_gravity="center_horizontal"
        android:layout_width="640px"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:inputType="text"
        android:hint="用户名"
        android:background="@drawable/turn_in_line"
        android:id="@+id/user_name"
        android:cursorVisible="true"/>
    <EditText
        android:layout_gravity="center_horizontal"
        android:layout_width="640px"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:password="true"
        android:hint="密码"
        android:cursorVisible="true"
        android:background="@drawable/turn_in_line"
        android:id="@+id/user_password"/>
    <Button
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/turn_in_btn"
        android:text="登录"
        android:textColor="@color/turn_in_text"
        android:id="@+id/button"
        android:onClick="login"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp">

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Forget"
            android:id="@+id/btn_rec_word"
            android:layout_alignParentBottom="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Resign"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/register_choose"
            android:onClick="registerChooseHandler"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/login_text"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login By Other Way"
            android:textColor="@color/login_text"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/login_text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/tencent_wechat_button"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>
        <ImageButton
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/tencen_qq_button"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>
        <ImageButton
            android:layout_marginTop="10dp"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/sina_button"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:onClick="sinaLoginChooseHandeler"/>
    </LinearLayout>

</LinearLayout>