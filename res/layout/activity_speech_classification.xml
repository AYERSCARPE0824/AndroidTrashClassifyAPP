<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpeechClassificationActivity">
<!--标题-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
<!--标题图片-->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/trashbin"
            android:layout_marginLeft="-5dp"/>
<!--标题文字-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分多多"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
<!--键入IP地址-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="bottom"
            android:text="IP地址："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_host_rec"
            android:layout_width="153dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            android:cursorVisible="true"
            android:hint="ip地址"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:text="192.168.41.37" />

        <Button
            android:id="@+id/btn_sethost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="-5dp"
            android:onClick="setHost"
            android:text="确定" />

    </LinearLayout>
<!--环境状况-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="温度："
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="湿度："
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="垃圾是否已满："
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/ultra_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="18sp"/>
        <Button
            android:id="@+id/button_refresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/refresh"
            android:layout_marginLeft="5dp"
            android:onClick="refresh"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center">
<!--垃圾分类查询-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="10dp">
<!--分类结果-->

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="查询结果"
                android:textSize="20sp" />
<!--图片查询-->
            <Button
                android:id="@+id/btn_pic_rec"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/photo"
                android:onClick="pic_Rec"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>

<!--语音查询-->
            <Button
                android:id="@+id/btn_rec_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="搜索"
                android:textSize="18sp"
                android:background="@drawable/button_background"
                android:onClick="word_Rec"/>
        </LinearLayout>
    </LinearLayout>
<!--拍照结果-->
    <ImageView
        android:id="@+id/picture"
        android:layout_width="350dp"
        android:layout_height="375dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_background"
        android:scaleType="fitXY" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
<!--语音识别结果-->
        <TextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
<!--语音识别-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_background"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
<!--录音-->
            <Button
                android:id="@+id/button_record"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/microphone"
                android:onClick="Recognition" />
<!--拍照-->
            <Button
                android:id="@+id/btn_takephoto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/photo"
                android:gravity="center"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
<!--附近垃圾站-->
        <Button
            android:id="@+id/btn_stations"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/map"
            android:onClick="goToStationMap"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</LinearLayout>